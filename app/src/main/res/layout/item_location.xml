<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with name and status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Evacuation Center Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/status_active"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Address -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address of the evacuation center"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <!-- Description (optional) -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of facilities and amenities"
            android:textSize="13sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Capacity -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacity"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 people"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:drawableStart="@drawable/ic_people"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <!-- Contact -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+63 XXX XXX XXXX"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

        <!-- Coordinates and Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvCoordinates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="14.5995, 120.9842"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:drawableStart="@drawable/ic_map"
                android:drawablePadding="4dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tvDirections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Directions"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_directions"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
